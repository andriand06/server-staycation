<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="card-body">
    <div class="row">
      <div class="col-md-4">
        <img
          src="/<%= booking.payments.proofPayment %>"
          alt="image"
          style="
            width: 100%;
            display: block;
            border-radius: 0.5rem;
            box-shadow: 0.25rem 0.3rem;
          "
        />
        <% if(booking.payments.status == 'Proses'){ %>
            <div class="row ml-2">
                <form
                  action="/admin/booking/<%= booking.id %>/confirm?_method=PUT"
                  method="post"
                  class="mr-3"
                >
                  <button
                    type="submit"
                    class="btn btn-success btn-sm"
                    style="margin-top: 1rem"
                  >
                    <i class="fas fa-check"></i>Confirmation
                  </button>
                </form>
                <form
                  action="/admin/booking/<%= booking.id %>/reject?_method=PUT"
                  method="post"
                >
                  <button
                    type="submit"
                    class="btn btn-danger btn-sm"
                    style="margin-top: 1rem"
                  >
                    <i class="fas fa-times"></i>Reject
                  </button>
                </form>
              </div>
        <% } %>
      </div>
      <div class="col-md-8">
        <div class="table-responsive">
          <table
            class="display table table-bordered"
            id="dataTable"
            width="100%"
            cellspacing="0"
          >
            <thead>
              <tr>
                <th>Member Name</th>
                <th>Total</th>
                <th>Bank From</th>
                <th>Title</th>
              </tr>
            </thead>
            <tfoot>
              <tr>
                <th>Member Name</th>
                <th>Total</th>
                <th>Bank From</th>
                <th>Title</th>
              </tr>
            </tfoot>
            <tbody>
              <tr>
                <td>
                  <%= booking.memberId.firstName %> <%=
                  booking.memberId.lastName %>
                </td>
                <td><%= booking.total %></td>
                <td><%= booking.payments.bankFrom %></td>
                <td><%= booking.itemId.title %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<a href="/admin/booking" class="btn btn-info btn-circle btn-sm"
  ><i class="fas fa-arrow-left"></i
></a>

