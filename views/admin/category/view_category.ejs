<script>
  $("#dataTable").on("click", ".button-update", function () {
    /**
     * diambil dari attribute data-id dan data-name pada table
     */
    let id = $(this).data("id");
    let name = $(this).data("name");
    //console.log(id + name);
    $("#editModal").modal("show");
    $(".id").val(id);
    $(".name").val(name);
  });

  $("#dataTable").on("click", ".button-delete", function () {
    let id = $(this).data("id");
    $("#deleteModal").modal("show");
    $(".id").val(id);
  });
</script>
