<%- include('../../partials/header.ejs') %>
<body id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">
    <!-- Sidebar -->
    <%- include('../../partials/sidebar.ejs') %>
    <!-- End of Sidebar -->
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        <!-- Topbar -->
        <%- include('../../partials/navbar.ejs') %>
        <!-- End of Topbar -->
        <!-- Begin Page Content -->
        <div class="container-fluid">
          <!-- Page Heading -->
          <h1 class="h3 mb-4 text-gray-800">Item Page</h1>
          <%- include('../../partials/message.ejs') %> <% if(action == 'View') {
          %>
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
              <button
                class="nav-link active"
                id="show-tab"
                data-toggle="tab"
                data-target="#show"
                type="button"
                role="tab"
                aria-controls="show"
                aria-selected="true"
              >
                Show Item
              </button>
            </li>
            <li class="nav-item" role="presentation">
              <button
                class="nav-link"
                id="add-tab"
                data-toggle="tab"
                data-target="#add"
                type="button"
                role="tab"
                aria-controls="add"
                aria-selected="false"
              >
                Add Item
              </button>
            </li>
          </ul>
          <div class="tab-content" id="myTabContent">
            <%- include('show_table_item.ejs') %> <%- include('add_item.ejs') %>
          </div>
          <% } else if(action == 'Show Image') { %>
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
              <button
                class="nav-link active"
                id="image-tab"
                data-toggle="tab"
                data-target="#image"
                type="button"
                role="tab"
                aria-controls="image"
                aria-selected="true"
              >
                Show Image
              </button>
            </li>
          </ul>
          <div class="tab-content" id="myTabContent">
            <%- include('show_image_item.ejs') %>
          </div>
          <% } else if(action == 'Edit') { %>
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
              <button
                class="nav-link active"
                id="edit-tab"
                data-toggle="tab"
                data-target="#edit"
                type="button"
                role="tab"
                aria-controls="edit"
                aria-selected="true"
              >
                Show Detail
              </button>
            </li>
          </ul>
          <div class="tab-content" id="myTabContent">
            <%- include('edit_item.ejs') %>
          </div>
          <% } %>
        </div>
        <!-- /.container-fluid -->
      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <%- include('../../partials/footer.ejs') %>
      <!-- End of Footer -->
    </div>
    <!-- End of Content Wrapper -->
  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>
  <%- include('delete_modal.ejs') %> <%- include('../../partials/script.ejs') %>
</body>
<script>
  ClassicEditor.create(document.querySelector("#description"))
    .then((editor) => {
      console.log(editor);
    })
    .catch((error) => {
      console.error(error);
    });
  $(document).ready(function () {
    $("#dataTable").DataTable();
  });
  $("#dataTable").on("click", ".button-delete", function () {
    let id = $(this).data("id");
    $("#deleteModal").modal("show");
    $(".id").val(id);
  });
</script>
