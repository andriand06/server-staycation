<div
  class="tab-pane fade show"
  id="activity"
  role="tabpanel"
  aria-labelledby="activity-tab"
>
  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div class="card-body">
      <div class="row">
        <div class="col-md-4">
          <form
            action="/admin/item/new-activity/<%= item.id %>"
            method="post"
            enctype="multipart/form-data"
          >
            <div class="form-group">
              <label for="name">Name</label>
              <input
                type="text"
                name="name"
                id="name"
                class="form-control"
                placeholder="Enter name"
                required
              />
            </div>
            <div class="form-group">
              <label for="type">Type</label>
              <input
                type="text"
                name="type"
                id="type"
                class="form-control"
                placeholder="Enter type"
                required
              />
            </div>
            <div class="form-group">
              <label for="image">Image</label>
              <input
                type="file"
                class="form-control"
                name="image"
                id="image"
                required
              />
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
          </form>
        </div>
        <div class="col-md-8">
          <div class="table-responsive">
            <table
              class="display table table-bordered"
              id="dataTable1"
              width="100%"
              cellspacing="0"
            >
              <thead>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>Type</th>
                  <th>Image</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tfoot>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>Type</th>
                  <th>Images</th>
                  <th>Action</th>
                </tr>
              </tfoot>
              <tbody>
                <% item.activityId.forEach((res, index) => { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= res.name %></td>
                  <td><%= res.type %></td>
                  <td>
                    <img
                      src="/<%= res.imageUrl %>"
                      alt="image"
                      style="width: 100px; height: 100px"
                    />
                  </td>
                  <td>
                    <a
                      href="javascript:void()"
                      class="btn btn-warning btn-circle btn-sm edit-activity"
                      data-id="<%= item.id %>"
                      data-activityid="<%= res.id %>"
                      data-name="<%= res.name %>"
                      data-type="<%= res.type %>"
                      ><i class="fas fa-edit"></i
                    ></a>
                    <a
                      href="javascript:void()"
                      data-id="<%= item.id %>"
                      data-activityid="<%= res.id %>"
                      class="btn btn-danger btn-circle btn-sm delete-activity"
                      ><i class="fas fa-trash"></i
                    ></a>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <a href="/admin/item" class="btn btn-info btn-circle btn-sm"
    ><i class="fas fa-arrow-left"></i
  ></a>
</div>

<script></script>
