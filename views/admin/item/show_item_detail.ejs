<div
  class="tab-pane fade show active"
  id="detail"
  role="tabpanel"
  aria-labelledby="detail-tab"
>
  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div class="card-body">
      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <label for="" class="form-label">Is Popular = </label>
            <span><%= item.isPopular %></span>
          </div>
          <div class="form-group">
            <label for="" class="form-label">Description = </label>
            <span><%= item.description.replace(/<[^>]*>/gm,'') %></span>
          </div>
          <div class="form-group">
            <label for="" class="form-label">Category Name = </label>
            <span><%= item.categoryId.name %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
  <a href="/admin/item" class="btn btn-info btn-circle btn-sm"
    ><i class="fas fa-arrow-left"></i
  ></a>
</div>
