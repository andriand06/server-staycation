<%- include('../../partials/header.ejs') %>
<body id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">
    <!-- Sidebar -->
    <%- include('../../partials/sidebar.ejs') %>
    <!-- End of Sidebar -->
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        <!-- Topbar -->
        <%- include('../../partials/navbar.ejs') %>
        <!-- End of Topbar -->
        <!-- Begin Page Content -->
        <div class="container-fluid">
          <!-- Page Heading -->
          <h1 class="h3 mb-4 text-gray-800">Item Page</h1>
          <%- include('../../partials/message.ejs') %>
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
              <button
                class="nav-link active"
                id="feature-tab"
                data-toggle="tab"
                data-target="#feature"
                type="button"
                role="tab"
                aria-controls="feature"
                aria-selected="true"
              >
                Show Feature
              </button>
            </li>
            <li class="nav-item" role="presentation">
              <button
                class="nav-link"
                id="activity-tab"
                data-toggle="tab"
                data-target="#activity"
                type="button"
                role="tab"
                aria-controls="activity"
                aria-selected="true"
              >
                Show Activity
              </button>
            </li>
          </ul>
          <div class="tab-content" id="myTabContent">
            <%- include('show_item_feature.ejs') %> <%-
            include('show_item_activity.ejs') %>
          </div>
        </div>
        <!-- /.container-fluid -->
      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <%- include('../../partials/footer.ejs') %>
      <!-- End of Footer -->
    </div>
    <!-- End of Content Wrapper -->
  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>
  <%- include('edit_feature_modal.ejs') %> <%-
  include('delete_feature_modal.ejs') %> <%- include('edit_activity_modal.ejs')
  %> <%- include('delete_activity_modal.ejs') %> <%-
  include('../../partials/script.ejs') %>
</body>
<script>
  $(document).ready(function () {
    $("#dataTable1").dataTable();
  });
  $("#dataTable").on("click", ".edit-feature", function () {
    let featureId = $(this).data("featureid");
    let id = $(this).data("id");
    let name = $(this).data("name");
    let qty = $(this).data("qty");
    $("#editModal").modal("show");
    $(".featureId").val(featureId);
    $(".id").val(id);
    $(".name").val(name);
    $(".qty").val(qty);
  });
  $("#dataTable").on("click", ".delete-feature", function () {
    let featureId = $(this).data("featureid");
    let id = $(this).data("id");
    $("#deleteFeatureModal").modal("show");
    $(".featureId").val(featureId);
    $(".id").val(id);
  });
  $("#dataTable1").on("click", ".edit-activity", function () {
    let activityId = $(this).data("activityid");
    let id = $(this).data("id");
    let name = $(this).data("name");
    let type = $(this).data("type");
    $("#editActivityModal").modal("show");
    $(".activityId").val(activityId);
    $(".id").val(id);
    $(".name").val(name);
    $(".type").val(type);
  });
  $("#dataTable1").on("click", ".delete-activity", function () {
    let activityId = $(this).data("activityid");
    let id = $(this).data("id");
    $("#deleteActivityModal").modal("show");
    $(".activityId").val(activityId);
    $(".id").val(id);
  });
</script>
